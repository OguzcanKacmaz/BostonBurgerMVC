<!DOCTYPE html>
<html class="h-100" lang="en">
<partial name="_HeadPartialView" />
<body class="d-flex flex-column h-100">
    <partial name="_NavigationPartialView" />

    <div class="container mt-3">

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
        <div class="mb-5">
            <div class="container d-flex justify-content-center">

                <span class="border border-2 p-5">
                    <span class="text-color">ET ÜRÜNLERİMİZ YERLİ ÜRETİCİLERDE <span class="text-color2">HELAL SERTİFİKALI</span> ETTEN ÜRETİLMEKTEDİR. </span>
                </span>

            </div>
        </div>
    </div>
    <footer class="border-top p-4 bg justify-content-between mt-5">
        <div class="container">
            <div class="d-flex justify-content-evenly">
                <div>
                    <p class="border-bottom border-2 border-dark text-color">Ürünler</p>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item bg p-0">
                            <a asp-controller="Siparis" asp-action="Index">Burgerler</a>
                        </li>
                        <li class="list-group-item bg p-0">
                            <a asp-controller="Siparis" asp-action="Index">Menuler</a>
                        </li>
                        <li class="list-group-item bg p-0">
                            <a asp-controller="Siparis" asp-action="Index">İçecekler</a>
                        </li>
                        <li class="list-group-item bg p-0">
                            <a asp-controller="Siparis" asp-action="Index">Atıştırmalıklar</a>
                        </li>
                        <li class="list-group-item bg p-0">
                            <a asp-controller="Siparis" asp-action="Index">Soslar</a>
                        </li>
                    </ul>
                </div>
                <div>
                    <p class="border-bottom border-2 border-dark text-color mb-0">Bizi Takip Edin</p>
                    <div class="d-flex justify-content-center">
                        <a href="#" class="me-2"><i class="fa-brands fa-instagram fa-lg text"></i></a>
                        <a href="#" class="me-2"><i class="fa-brands fa-twitter fa-lg text"></i></a>
                        <a href="#" class="me-2"><i class="fa-brands fa-facebook fa-lg text"></i></a>
                    </div>
                </div>
                <div>
                    <p class="border-bottom border-2 border-dark text-color mb-0">Boston Burger® Lezzetleri Her An Yanınızda!</p>
                    <div>
                        <a href="#" class="me-2"><img src="~/img/Download_on_the_App_Store_Badge.svg" /></a>
                        <a href="#" class="me-2"><img src="~/img/Google_Play_Store_badge_EN.svg" /></a>

                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/sweetalert2/dist/sweetalert2.all.min.js"></script>
    <script src="~/js/slider.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>