@model MenuEditViewModel
@{
    string message = (string)TempData["Mesaj"]!;
}
<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <form class="card p-5 form-simple" method="post" asp-area="Admin" asp-controller="AdminBurger" asp-action="BurgerGuncelle" enctype="multipart/form-data">
                <h1 class="mb-3">Burger Güncelle</h1>

                <div class="form-group">
                    <label asp-for="Adı">Burger Adı : </label>
                    <input asp-for="Adı" class="form-control" />
                    <span asp-validation-for="Adı"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Fiyat">Burger Fiyatı : </label>
                    <input asp-for="Fiyat" class="form-control" />
                    <span asp-validation-for="Fiyat"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Aciklama">Burger Açıklaması : </label>
                    <input asp-for="Aciklama" class="form-control" />
                    <span asp-validation-for="Aciklama"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Resim"></label>
                    <input asp-for="Resim" type="file" class="form-control" />
                    <span asp-validation-for="Resim"></span>

                </div>
                <div>
                    <input asp-for="ID" type="hidden" />
                </div>
                <div>
                    <button class="btn btn-primary">Burger Güncelle</button>
                    <button asp-action="Index" class="btn btn-secondary">İptal</button>
                </div>

            </form>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        let message = "@message";
        if (message)
            messageShow(message)
    </script>
            }