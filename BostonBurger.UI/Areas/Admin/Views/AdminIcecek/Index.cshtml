@model List<Icecek>
@{
    ViewData["Title"] = "İçecekler";
    string message = (string)TempData["Mesaj"]!;
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            </p>
            <div class="table-responsive">
                <table class="table table-dark">
                    <thead class="thead-light">
                        <tr>
                            <th>İçecek Id</th>
                            <th>İçecek Adı</th>
                            <th>İçecek Fiyatı</th>
                            <th>İçecek Açıklama</th>
                            <th>İçecek Resim</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var icecek in Model)
                        {
                            <tr>
                                <th>
                                    @icecek.ID
                                </th>
                                <td>
                                    @icecek.Adı
                                </td>
                                <td>
                                    @icecek.Fiyat
                                </td>
                                <td>
                                    @icecek.Aciklama
                                </td>
                                <td>
                                    <img src="~/img/@icecek.Resim" />
                                </td>
                                <td>
                                    <a asp-area="Admin" asp-action="IcecekSil" asp-route-icecekId="@icecek.ID" class="btn btn-danger">Sil</a>
                                </td>
                                <td>
                                    <a asp-area="Admin" asp-action="IcecekGuncelle" asp-route-icecekId="@icecek.ID" class="btn btn-warning">Güncelle</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <a class="btn btn-outline-primary mt-3" asp-controller="AdminIcecek" asp-action="IcecekEkle">İçecek Ekle</a>
            @section Scripts{
                <script>
                    let message = "@message";
                    if (message)
                        messageShow(message)
                </script>
            }
        </div>
    </div>
</div>