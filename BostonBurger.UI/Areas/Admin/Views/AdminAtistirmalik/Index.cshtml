@model List<Atistirmalik>
@{
    ViewData["Title"] = "Atıştırmalık";
    string message = (string)TempData["Mesaj"]!;
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            </p>
            <div class="table-responsive">
                <table class="table table-dark">
                    <thead class="thead-light">
                        <tr>
                            <th>Atıştırmalık Id</th>
                            <th>Atıştırmalık Adı</th>
                            <th>Atıştırmalık Fiyatı</th>
                            <th>Atıştırmalık Açıklama</th>
                            <th>Atıştırmalık Resim</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var atistirmalik in Model)
                        {
                                    <tr>
                                        <th>
                                    @atistirmalik.ID
                                        </th>
                                        <td>
                                    @atistirmalik.Adı
                                        </td>
                                        <td>
                                    @atistirmalik.Fiyat
                                        </td>
                                        <td>
                                    @atistirmalik.Aciklama
                                        </td>
                                        <td>
                                        <img src="~/img/@atistirmalik.Resim" />
                                        </td>
                                        <td>
                                    <a asp-area="Admin" asp-action="AtistirmalikSil" asp-route-atistirmalikId="@atistirmalik.ID" class="btn btn-danger">Sil</a>
                                        </td>
                                        <td>
                                    <a asp-area="Admin" asp-action="AtistirmalikGuncelle" asp-route-atistirmalikId="@atistirmalik.ID" class="btn btn-warning">Güncelle</a>
                                        </td>
                                    </tr>
                        }
                    </tbody>
                </table>
            </div>
            <a class="btn btn-outline-primary mt-3" asp-controller="AdminAtistirmalik" asp-action="AtistirmalikEkle">Atıştırmalık Ekle</a>
            @section Scripts{
                        <script>
                            let message = "@message";
                            if (message)
                                messageShow(message)
                        </script>
            }
        </div>
    </div>
</div>