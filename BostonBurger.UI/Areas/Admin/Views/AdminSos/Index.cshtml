@model List<Sos>
@{
    ViewData["Title"] = "Soslar";
    string message = (string)TempData["Mesaj"]!;
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            </p>
            <div class="table-responsive">
                <table class="table table-dark">
                    <thead class="thead-light">
                        <tr>
                            <th>Sos Id</th>
                            <th>Sos Adı</th>
                            <th>Sos Fiyatı</th>
                            <th>Sos Açıklama</th>
                            <th>Sos Resim</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var sos in Model)
                        {
                            <tr>
                                <th>
                                    @sos.ID
                                </th>
                                <td>
                                    @sos.Adı
                                </td>
                                <td>
                                    @sos.Fiyat
                                </td>
                                <td>
                                    @sos.Aciklama
                                </td>
                                <td>
                                    <img src="~/img/@sos.Resim" />
                                </td>
                                <td>
                                    <a asp-area="Admin" asp-action="SosSil" asp-route-sosId="@sos.ID" class="btn btn-danger">Sil</a>
                                </td>
                                <td>
                                    <a asp-area="Admin" asp-action="SosGuncelle" asp-route-sosId="@sos.ID" class="btn btn-warning">Güncelle</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <a class="btn btn-outline-primary mt-3" asp-controller="AdminSos" asp-action="SosEkle">Sos Ekle</a>
            @section Scripts{
                <script>
                    let message = "@message";
                    if (message)
                        messageShow(message)
                </script>
            }
        </div>
    </div>
</div>