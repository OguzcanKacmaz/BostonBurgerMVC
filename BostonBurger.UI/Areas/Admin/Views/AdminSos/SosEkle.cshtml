@model MenuViewModel
@{
    string message = (string)TempData["Mesaj"]!;
}
<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <form class="card p-5 form-simple" method="post" asp-area="Admin" asp-action="SosEkle" enctype="multipart/form-data">
                <h1 class="mb-3">Sos Ekle</h1>

                <div class="form-group">
                    <label asp-for="Adı">Sos Adı : </label>
                    <input asp-for="Adı" class="form-control" />
                    <span asp-validation-for="Adı" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Fiyat">Sos Fiyatı : </label>
                    <input asp-for="Fiyat" type="number" class="form-control" />
                    <span asp-validation-for="Fiyat" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Aciklama">Sos Açıklaması : </label>
                    <input asp-for="Aciklama" class="form-control" />
                    <span asp-validation-for="Aciklama" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Resim"></label>
                    <input asp-for="Resim" type="file" class="form-control" />
                    <span asp-validation-for="Resim" class="text-danger"></span>
                </div>
                <div>
                    <button class="btn btn-primary">Sos Ekle</button>
                    <button asp-action="Index" class="btn btn-secondary">İptal</button>
                </div>

            </form>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        let message = "@message";
        if (message)
            messageShow(message)
    </script>
            }
