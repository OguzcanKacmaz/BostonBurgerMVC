@model List<Menu>

@{
    ViewData["Title"] = "Menuler";
    string message = (string)TempData["Mesaj"]!;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">            
            <div class="table-responsive">
                <table class="table table-dark">
                    <thead class="thead-light">
                        <tr>
                            <th>Menu Id</th>
                            <th>Menu Adı</th>
                            <th>Menu Fiyatı</th>
                            <th>Menu Açıklama</th>
                            <th>Menu Resim</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var menu in Model)
                        {
                            <tr>
                                <th>
                                    @menu.ID
                                </th>
                                <td>
                                    @menu.Adı
                                </td>
                                <td>
                                    @menu.Fiyat
                                </td>
                                <td>
                                    @menu.Aciklama
                                </td>
                                <td>
                                    <img src="~/img/@menu.Resim" width="150px" height="150px" />
                                </td>
                                <td>
                                    <a asp-controller="AdminMenu" asp-action="MenuSil" asp-route-menuId="@menu.ID" class="btn btn-danger">Sil</a>
                                </td>
                                <td>
                                    <a asp-controller="AdminMenu" asp-action="MenuGuncelle" asp-route-menuId="@menu.ID" class="btn btn-warning">Güncelle</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <a class="btn btn-outline-primary mt-3" asp-controller="AdminMenu" asp-action="MenuEkle">Menu Ekle</a>
            @section Scripts{
                <script>
                    let message = "@message";
                    if (message)
                        messageShow(message)
                </script>
            }
        </div>
    </div>
</div>