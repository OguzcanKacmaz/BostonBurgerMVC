@model List<EkstraMalzeme>
@{
    ViewData["Title"] = "Ekstra Malzemeler";
    string message = (string)TempData["Mesaj"]!;
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            </p>
            <div class="table-responsive">
                <table class="table table-dark">
                    <thead class="thead-light">
                        <tr>
                            <th>EkstraMalzeme Id</th>
                            <th>EkstraMalzeme Adı</th>
                            <th>EkstraMalzeme Fiyatı</th>
                            <th>EkstraMalzeme Açıklama</th>
                            <th>EkstraMalzeme Resim</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ekstraMalzeme in Model)
                        {
                                    <tr>
                                        <th>
                                    @ekstraMalzeme.ID
                                        </th>
                                        <td>
                                    @ekstraMalzeme.Adı
                                        </td>
                                        <td>
                                    @ekstraMalzeme.Fiyat
                                        </td>
                                        <td>
                                    @ekstraMalzeme.Aciklama
                                        </td>
                                        <td>
                                    <img src="~/img/@ekstraMalzeme.Resim" />
                                        </td>
                                        <td>
                                    <a asp-area="Admin" asp-action="EkstraMalzemeSil" asp-route-ekstraMalzemeId="@ekstraMalzeme.ID" class="btn btn-danger">Sil</a>
                                        </td>
                                        <td>
                                    <a asp-area="Admin" asp-action="EkstraMalzemeGuncelle" asp-route-ekstraMalzemeId="@ekstraMalzeme.ID" class="btn btn-warning">Güncelle</a>
                                        </td>
                                    </tr>
                        }
                    </tbody>
                </table>
            </div>
            <a class="btn btn-outline-primary mt-3" asp-controller="AdminEkstraMalzeme" asp-action="EkstraMalzemeEkle">EkstraMalzeme Ekle</a>
            @section Scripts{
                        <script>
                            let message = "@message";
                            if (message)
                                messageShow(message)
                        </script>
            }
        </div>
    </div>
</div>