@model SiparisListesiViewModel
<div class="stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="d-flex flex-row justify-content-between">
                <h4 class="card-title mb-1">Son 5 Sipariş</h4>
                <p class="text-muted mb-1">Your data status</p>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="preview-list">
                        <div class="col-lg-12 grid-margin stretch-card">
                            <div class="card">
                                <div class="card-body">

                                    <div class="table-responsive">
                                        <table class="table table-dark">
                                            <thead class="thead-light">
                                                <tr>
                                                    <th> Siparis Id</th>
                                                    <th> Siparis Adedi</th>
                                                    <th> Boyut</th>
                                                    <th> Siparis Tutarı</th>
                                                    <th> Menu Ad/Adları</th>
                                                    <th> Burger Ad/Adları</th>
                                                    <th> Ekstra Malzeme Ad/Adları</th>
                                                    <th> İçecek Ad/Adları</th>
                                                    <th> Sos Ad/Adları</th>
                                                    <th> Atıştırmalık Ad/Adları</th>
                                                    <th> Siparis Onayı</th>
                                                    <th> İptal</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var siparisler in Model.Siparisler)
                                                {
                                                    @foreach (var siparis in siparisler.siparis)
                                                    {
                                                        <tr>
                                                            <td>@siparis.ID</td>
                                                            <td>@siparis.Adet</td>
                                                            <td>@siparis.SiparisBoyut</td>
                                                            <td>@siparis.Fiyat</td>
                                                            <td>@string.Join(", ",siparisler.menuAdListesi)</td>
                                                            <td>@string.Join(", ",siparisler.burgerAdListesi)</td>
                                                            <td>@string.Join(", ",siparisler.ekstraMalzemeAdListesi)</td>
                                                            <td>@string.Join(", ",siparisler.icecekAdListesi)</td>
                                                            <td>@string.Join(", ",siparisler.sosAdListesi)</td>
                                                            <td>@string.Join(", ",siparisler.atistirmalikAdListesi)</td>
                                                            <td>@siparis.SiparisOnaylandı</td>
                                                            <td><a asp-action="Siparisİptal" asp-controller="AdminSiparis" asp-route-siparisId="@siparis.ID" class="btn btn-danger">İptal</a></td>
                                                        </tr>

                                                    }
                                                }

                                            </tbody>
                                        </table>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

